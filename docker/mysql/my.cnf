# ==============================================
# CONFIGURAÇÃO CUSTOMIZADA MYSQL 8.0
# ==============================================
# Otimizações para CRM Protecar
# Ajuste conforme recursos do servidor

[mysqld]
# ==============================================
# CHARSET E COLLATION
# ==============================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-authentication-plugin = mysql_native_password

# ==============================================
# PERFORMANCE E CACHE
# ==============================================
# InnoDB Buffer Pool (ajuste conforme RAM disponível)
# Recomendado: 50-70% da RAM disponível
# Para 2GB RAM: 512M-1G
# Para 4GB RAM: 2G-3G
innodb_buffer_pool_size = 256M

# Tamanho do log file (melhor performance em writes)
innodb_log_file_size = 64M
innodb_log_buffer_size = 16M

# Flush method para melhor performance
innodb_flush_method = O_DIRECT

# Flush log a cada N segundos (1 = mais seguro, 2 = mais rápido)
innodb_flush_log_at_trx_commit = 2

# Cache de queries
query_cache_type = 0
query_cache_size = 0

# Cache de tabelas
table_open_cache = 2000
table_definition_cache = 1400

# ==============================================
# CONEXÕES
# ==============================================
max_connections = 100
max_connect_errors = 1000
wait_timeout = 600
interactive_timeout = 600

# ==============================================
# BUFFERS E THREADS
# ==============================================
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 2M
thread_cache_size = 8
thread_stack = 256K

# ==============================================
# TEMPORARY TABLES
# ==============================================
tmp_table_size = 32M
max_heap_table_size = 32M

# ==============================================
# LOGS E MONITORAMENTO
# ==============================================
# Slow query log (consultas lentas > 2 segundos)
# Comentado temporariamente - diretório de logs pode não existir
# slow_query_log = 1
# slow_query_log_file = /var/log/mysql/slow-query.log
# long_query_time = 2
# log_queries_not_using_indexes = 0

# Error log
# log_error = /var/log/mysql/error.log

# General log (desabilitado por padrão, usar apenas debug)
# general_log = 0
# general_log_file = /var/log/mysql/general.log

# ==============================================
# SEGURANÇA
# ==============================================
# Desabilitar LOCAL INFILE (segurança)
local_infile = 0

# ==============================================
# TIMEZONE
# ==============================================
default-time-zone = '+00:00'

# ==============================================
# INNODB SPECIFIC
# ==============================================
innodb_file_per_table = 1
innodb_stats_on_metadata = 0
innodb_buffer_pool_instances = 1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
